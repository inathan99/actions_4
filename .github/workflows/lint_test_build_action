 name: Install NodeJS and lint test build
 jobs:
   test:
     runs-on: ubuntu-latest
     steps:
       - name: Get Code
         uses: actions/checkout@v3
       - name: Install NodeJS
         uses: actions/setup-node@v3
         with:
           node-version: 18
       - name: Lint
         run: |
           eslint --ext .jsx --fix src
           echo 'lint done'
       - name: Test
         run: |
           vitest run
           echo 'test done'
       - name: Build
         run: |
           vite build
           echo 'build done'
         
